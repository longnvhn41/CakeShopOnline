<!DOCTYPE html>
@using CakeShop.Models;
<html>
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ogani Template">
    <meta name="keywords" content="Ogani, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title</title>

    <!-- Google Font -->
    <link href="@Url.Content("~/Content/fonts.css")" rel="stylesheet" type="text/css" />

    <!-- Css Styles -->
    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/elegant-icons.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/nice-select.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/owl.carousel.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/slicknav.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    @RenderSection("css", false)
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Humberger Begin -->
    @*<div class="humberger__menu__overlay"></div>*@
    @*<div class="humberger__menu__wrapper">
            <div class="humberger__menu__logo">
                <a href="@Url.Action("Index","Home")"><img src="@Url.Content("~/Content/img/logo.png")" alt="abc"></a>
            </div>
            <div class="humberger__menu__cart">
                <ul>
                    <li><a href="@Url.Action("Index", "Cart")"><i class="fa fa-shopping-bag"></i></a></li>
                </ul>
                <div class="header__cart__price">item: <span>$150.00</span></div>
            </div>
            <nav class="humberger__menu__nav mobile-menu">
                <ul>
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Shop", "IndexForCustomer", "Product")</li>
                    <li>@Html.ActionLink("Order", "", "")</li>
                    <li>@Html.ActionLink("History", "", "")</li>
                </ul>
            </nav>
            <div id="mobile-menu-wrap"></div>
            <div class="header__top__right__social">
                <a href="#"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-pinterest-p"></i></a>
            </div>
            <div class="humberger__menu__contact">
                <ul>
                    <li><i class="fa fa-envelope"></i> hello@fpt.edu.vn</li>
                </ul>
            </div>
        </div>*@
    <!-- Humberger End -->
    <!-- Header Section Begin -->
    <header class="header"style="background-color: #FE9A2E">
        <div class="header__top"style="background-color: #FE9A2E;width:100%;">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__left">
                            <ul>
                                <li><i class="fa fa-envelope"></i> cakeshop@gmail.com.vn</li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="header__top__right">
                            <div class="header__top__right__social">
                                <a href="#"><i class="fa fa-facebook"></i></a>
                                <a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-linkedin"></i></a>
                                <a href="#"><i class="fa fa-pinterest-p"></i></a>
                            </div>
                            @{
                                UserDetail user = Session["user"] as UserDetail;
                                if (user != null)
                                {
                                    <div class="header__top__right__language">
                                        <div>  <i class="fa fa-user"></i></div>
                                        <ul class="header__menu__dropdown">
                                            <li>@Html.ActionLink("Profile", "DetailsForUser", "Account")</li>
                                            <li><a href="@Url.Action("Logout","Account")"> logout</a></li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <div class="header__top__right__auth">
                                        @Html.ActionLink("Login", "Login", "Account")
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container"style="background-color: #FE9A2E">
            <div class="row">
                <div class="col-lg-3">
                    <div class="header__logo">

                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="header__menu">
                        <ul>
                            @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Shop", "IndexForCustomer", "Product")</li>
                                <li>@Html.ActionLink("Order", "IndexForAdmin", "Order")</li>
                                <li>@Html.ActionLink("History", "IndexForCustomer", "Order")</li>
                                <li>@Html.ActionLink("Product", "IndexForAdmin", "Product")</li>*@
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("Shop", "IndexForCustomer", "Product")</li>
                           @* <li>@Html.ActionLink("Upload", "Upload", "Product")</li>*@
                            @{
                                if (user != null)
                                {
                                    if (user.Account.type == 3)
                                    {
                                        <li>@Html.ActionLink("Order", "IndexForCustomer", "Order")</li>
                                    }
                                    else if (user.Account.type == 1)
                                    {
                                        <li>@Html.ActionLink("Product", "IndexForAdmin", "Product")</li>
                                        <li>@Html.ActionLink("Order", "IndexForAdmin", "Order")</li>
                                        <li>@Html.ActionLink("Account", "Index", "Account")</li>
                                    }
                                    else if (user.Account.type == 2)
                                    {
                                        <li>@Html.ActionLink("Product", "IndexForAdmin", "Product")</li>
                                        <li>@Html.ActionLink("Order", "IndexForAdmin", "Order")</li>

                                    }
                                }
                            }
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="header__cart">
                        <ul>
                            <li><a href="@Url.Action("Index", "Cart")"><i class="fa fa-shopping-bag"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="humberger__open">
                <i class="fa fa-bars"></i>

            </div>
        </div>
    </header>
    <!-- Header Section End -->
    <!-- Hero Section Begin -->
    <section class="hero hero-normal"style="background-color: #FE9A2E !important; ">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="hero__categories">
                        <div class="hero__categories__all"style="background-color: #FF6347;">
                            <i class="fa fa-bars"></i>
                            <span>All categories</span>
                        </div>
                        <ul>
                            @{
                                List<ProductCategory> listPC = ViewData["ProductCategoryList"] as List<ProductCategory>;
                                foreach (ProductCategory p in listPC)
                                {
                                    <li><a href="@Url.Action("IndexForCustomer","Product", new {ID = p.productCategoryID})">@p.productCategoryName</a></li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="hero__search">
                        <div class="hero__search__form">
                            <form action="../../Product/Search" method="post">
                                <div class="hero__search__categories"style="background: #FF6347;height:60px;margin-left:-10px;margin-top:-2px;color:white;">
                                    All Categories
                                </div>
                                <input type="text" placeholder="What do you need?" name="keyword">
                                <button type="submit" class="site-btn"style="background-color: #FF6347;margin-right:-10px; ">SEARCH</button>
                            </form>
                        </div>
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon"style="background-color: #FF6347; ">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>012 345 6789</h5>
                                <span>support 24/7 time</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->
    <div>
        @RenderBody()
    </div>
   
    <!-- Js Plugins -->
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.nice-select.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.slicknav.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/mixitup.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/owl.carousel.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/main.js")"
            type="text/javascript"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
