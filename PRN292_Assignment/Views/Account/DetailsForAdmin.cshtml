
@{
    Layout = "~/Views/Shared/_Layout_Header.cshtml";
    ViewBag.Title = "DetailsForAdmin";
}

@using CakeShop.Models
@{
    UserDetail ud = Session["userChange"] as UserDetail;
    List<string> list = new List<string>() { "Admin", "Employee", "Customer" };
}
<div class="container rounded mt-5" style="border: 1px solid black; margin-bottom: 100px; background-color: #FE9A2E;">
    <div class="row">
        <div class="col-md-4 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" src="@Url.Content("~/Content/img/ava/"+ ud.imageLink)" width="250"><span class="font-weight-bold">@ud.username</span><span class="text-black-50">@ud.email</span></div>
        </div>
        <div class="col-md-8">
            <div class="p-3 py-5">
               @* <div class="d-flex justify-content-between align-items-center mb-3">
                    <a href="@Url.Action("Index","Home")">
                        <div class="d-flex flex-row align-items-center back"style="background-color: #FF6347; ">
                            <i class="fa fa-long-arrow-left mr-1 mb-1"></i>
                            <h6 >Back to home</h6>
                        </div>
                    </a>
                </div>*@
                <form action="../../Account/ChangeType" method="Post">
                    <div class="row mt-2">
                        <div class="col-md-9"><input type="text" name="username" readonly required class="form-control" placeholder="first name" value="@ud.Account.username"></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-9"><input type="text" name="fullname" readonly required class="form-control" placeholder="first name" value="@ud.fullname"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-9"><input type="email" readonly class="form-control" placeholder="Email" value="@ud.email" required></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-9"><input type="text" readonly class="form-control" placeholder="Address" value="@ud.address"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-9"><input type="tel" readonly pattern="[0-9]{10}" class="form-control" placeholder="Phone" value="@ud.phone"></div>
                    </div>
                    <div class="row mt-3">
                        @*<div class="col-md-9"><input type="tel" name="type" class="form-control" pattern="[1-3]{1}" placeholder="type" value="@ud.Account.type"></div>*@
                        <div class="col-md-9">
                            <select name="type">
                                @{
                                    for (int i = 1; i < list.Count + 1; i++)
                                    {
                                        string selected = (i == ud.Account.type) ? "selected" : "";
                                        <option value="@i" style="line-height: 165px;" @selected>@list[i - 1]</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
    
                    <div class="mt-5 text-center"><input type="submit" value="update"></div>
                </form>
            </div>
        </div>
    </div>
</div>
